package com.nargiza;

import java.util.Scanner;

public class Main {
    static void minimumNum (int n1, int n2, int n3) {

        if (n1 < n2)
        System.out.println(n1+" is the smallest number.");
        else if (n2<n3)
                    System.out.println(n2+" is the smallest number.");
        else
            System.out.println(n3+" is the smallest number.");

    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Please enter three numbers to find the minimum.");
        System.out.println("Number 1: ");
        int n1 = scanner.nextInt();
        System.out.println("Number 2: ");
        int n2 = scanner.nextInt();
        System.out.println("Number 3: ");
        int n3 = scanner.nextInt();
        minimumNum(n1, n2, n3);


    }
}
