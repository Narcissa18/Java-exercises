package com.nargiza;

import java.util.Scanner;

public class Main {
// sum of all even numbers
    public static void main(String[] args) {
	int x, i=0;
	int sum = 0;
        System.out.println("enter a number");
        Scanner s =new Scanner(System.in);
        x=s.nextInt();

        while (i<=x){
            sum=sum+i;
            i+=2;
        } System.out.println(sum);
    }
}
//sum of all odd numbers 1-n
package com.nargiza;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
	int x, i=1;
	int sum = 0;
        System.out.println("enter a number");
        Scanner s =new Scanner(System.in);
        x=s.nextInt();

        while (i<x){
            sum=sum+i;
            i+=2;
        } System.out.println(sum);
    }
}

